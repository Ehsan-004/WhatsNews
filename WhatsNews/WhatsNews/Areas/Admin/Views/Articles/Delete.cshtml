@model WhatsNews.Models.Article

@{
    ViewBag.Title = "title";
}


<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Hello, <span>Welcome Here</span></h1>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /# row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>Delete This Article</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                @* <form method="post" asp-area="Admin" asp-controller="Categories" asp-action="Create"> *@
                                <form>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label asp-for="CategoryId">Category</label>
                                                <input type="text" value="@Model.Category.Name" readonly>
                                            </div>

                                            <div class="form-group">
                                                <label>Title</label>
                                                <input asp-for="Title" class="form-control" placeholder="Title" value="@Model.Title" readonly>
                                            </div>

                                            <div class="form-group">
                                                <label>Short Description</label>
                                                <input asp-for="ShortDescription" class="form-control" placeholder="ShortDescription" value="@Model.ShortDescription" readonly>
                                            </div>

                                            <div class="form-group">
                                                <label asp-for="PublishDate">Article PublishDate</label>
                                                <input asp-for="PublishDate" class="form-control" type="date" id="publishDate" value="@Model.PublishDate" readonly>
                                            </div>

                                            <div class="form-group">
                                                <label>Content</label>
                                                <input asp-for="Content" class="form-control" placeholder="Content" value="@Model.Content" readonly>
                                            </div>

                                            <div class="form-group">
                                                <label asp-for="Index1">Is Article Indexed1</label>
                                                <input type="checkbox" asp-for="Index1" value="@Model.Index1" readonly/>
                                            </div>

                                            <div class="form-group">
                                                <label asp-for="Index1">Is Article Indexed2</label>
                                                <input type="checkbox" asp-for="Index2" value="@Model.Index2" readonly/>
                                            </div>

                                            <div class="form-group">
                                                <label asp-for="Index3">Is Article Indexed3</label>
                                                <input type="checkbox" asp-for="Index3" value="@Model.Index3" readonly/>
                                            </div>

                                            <div class="form-group">
                                                <label for="imageFile">Article Image</label>
                                                <img id="preview" src="@Model.ImagePath" alt="Preview" style="max-width: 200px; display: none;">
                                            </div>

                                            <div class="form-group">
                                                <label asp-for="AType">Article Type</label>
                                                <input type="text" value="@Model.AType">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <form method="post" asp-area="Admin" asp-action="Delete">
                                    <input type="hidden" value="@Model.Id" name="Id" id="Id">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Articles" asp-action="Index">Back To List</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="footer">
                            <p>2018 © Admin Board. - <a href="#">example.com</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>