@model WhatsNews.Models.Comment

@{
    ViewBag.Title = "title";
}

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Hello, <span>Welcome Here</span></h1>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /# row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>Edit</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                <form method="post" asp-controller="Comments" asp-action="Edit">
                        
                                    <input asp-for="Author" type="hidden" value="@Model.Author">
                                    <input asp-for="Email" type="hidden" value="@Model.Email">
                                    <input asp-for="Date" type="hidden" value="@Model.Date">

                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>Author</label>
                                                <p class="form-control" >@Model.Author</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>Email</label>
                                                <p class="form-control" >@Model.Email</p>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>Author</label>
                                                <p class="form-control" >@Model.Date.Date</p>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>Text</label>
                                                <input asp-for="Text" class="form-control" placeholder="Name" value="@Model.Text">
                                                <span asp-validation-for="Text" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-default">Edit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="footer">
                            <p>2018 © Admin Board. - <a href="#">example.com</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
