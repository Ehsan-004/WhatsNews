@model IEnumerable<WhatsNews.Models.Article>

@{
    Layout = null;
}

<div class="col-md-6">
    <div class="main-slider-box">
        <div class="owl-carousel owl-theme main-slider">
            @foreach(var item in Model)
            {
                <div class="item">
                    <figure>
                        @* <img src="~/LocalStyles/img/unnamed.jpg" alt=""> *@
                        <img src="@item.ImagePath" alt="">
                        <figcaption class="gradient-fig"></figcaption>
                        <figcaption class="desc-fig">
                            <span><i class="fa fa-heart"></i> @item.Views</span>
                            <h3>@item.Title</h3>
                            <span><i class="fa fa-clock-o"></i> @item.PublishDate</span>
                            <p>@item.ShortDescription</p>
                        </figcaption>
                    </figure>
                </div>
            }
        </div>
    </div>
</div>