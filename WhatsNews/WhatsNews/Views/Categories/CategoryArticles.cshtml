@using System.Runtime.InteropServices
@model IEnumerable<Article>

@{
    ViewBag.Title = "category";
    Layout = "_Layout";
}

<div class="latest-posts">
    <div class="container-fluid">
        <div class="col-md-9">
            <div class="blog-title-span">
                <span class="title">اخبار و مقالات</span>
            </div>
            
            @foreach(var item in @Model)
            {
            
                <div class="col-md-4">
                    <div class="post-box">
                        <a asp-controller="Articles" asp-action="Show" asp-route-id="@item.Id">
                            <figure>
                                <img src="@item.ImagePath" alt="">
                                <figcaption class="meta-fig">
                                    <span><i class="fa fa-clock-o"></i> @item.PublishDate.Date</span>&nbsp;
                                    <span><i class="fa fa-comment-o"></i> 12</span>
                                </figcaption>
                                @* <figcaption class="view"> *@
                                @*     <span>بخش ویژه</span> *@
                                @*     <span>انجمن</span> *@
                                @*     <span>اتاق خبر</span> *@
                                @* </figcaption> *@
                            </figure>
                            <div class="text-p">
                                <h5>@item.Title</h5>
                                <p>@item.ShortDescription</p>
                                <div class="text-rigt">
                                    <a asp-controller="Articles" asp-action="Show" asp-route-id="@item.Id">ادامه ...</a>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-3 main-content">
            <!-- categories -->
            @await Component.InvokeAsync("Categories")
            
            <!-- report articles -->
            @await Component.InvokeAsync("ArticlesTypeReport")
            
        </div>
        <div class="col-md-12 text-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">قبلی</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">بعدی</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>